{
  "name": "ecommerce-application",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write",
    "ci:format": "prettier --check",
    "lint:fix": "eslint --debug src/ --fix",
    "prepare": "cd .. && husky ecommerce-application/.husky",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "validate-branch-name"
    }
  },
  "format-staged": {
    "*.(js|jsx|ts|css|scss|html)": [
      "npm run format"
    ]
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx|css|scss|html)": [
      "npm run format",
      "npm run lint:fix"
    ]
  },
  "validate-branch-name": {
    "pattern": "(feat|fix|hotfix|release|chore|refactor)/(RSS_ECOMM_\\d{1,2})_\\d{1,2}_[A-Z]+[A-Za-z0-9]",
    "errorMsg": "Name of branch is not valid!"
  },
  "dependencies": {
    "jest-environment-jsdom": "29.7.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "15.0.6",
    "@types/jest": "29.5.12",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "@vitejs/plugin-react": "4.2.1",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.6",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "eslint-plugin-unused-imports": "3.2.0",
    "husky": "9.0.11",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.2.2",
    "validate-branch-name": "1.3.0",
    "vite": "5.2.0"
  }
}
